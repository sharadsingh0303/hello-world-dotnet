pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('Docker-hub') // Docker Hub credentials ID
        AWS_EC2_USER = 'ec2-user' // Adjust as per your EC2 instance
        AWS_EC2_IP = '51.20.254.48'
        SSH_KEY = credentials('1') // SSH key for EC2 access
    }
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/sharadsingh0303/hello-world-dotnet.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("your-dockerhub-username/dotnet-api:${env.BUILD_NUMBER}")
                }
            }
        }
        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', DOCKERHUB_CREDENTIALS) {
                        docker.image("your-dockerhub-username/dotnet-api:${env.BUILD_NUMBER}").push()
                    }
                }
            }
        }
        stage('Deploy to AWS EC2') {
            steps {
                sshagent(credentials: ['1']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${AWS_EC2_USER}@${AWS_EC2_IP} \
                        'docker pull your-dockerhub-username/dotnet-api:${env.BUILD_NUMBER} && \
                        docker stop dotnet-api || true && \
                        docker rm dotnet-api || true && \
                        docker run -d -p 5000:5000 --name dotnet-api your-dockerhub-username/dotnet-api:${env.BUILD_NUMBER}'
                    """
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
